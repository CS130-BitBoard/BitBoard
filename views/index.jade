extends layout

block content
  h1 BitBoard

  a.button.login-button(href="#join-modal") Join Room
  a.button.login-button(href="/boards/1234") Create Room

  div.modal#join-modal
    div.dialog
      div.field
        h2 Your Name
        input.modal-input(id="userid", type="text", maxlength="8")

      div.field
        h2 Room Code
        input.modal-input.shortcode(id="boardid", type="text", maxlength="4")

      div.field
        h2 Password
        input.modal-input(type="password")

      a.button.submit.invalid(href="#join-modal") Join

  script(src='/javascripts/index.js')
