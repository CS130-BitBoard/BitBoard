extends layout

block content
  h1 BitBoard

  a.button.login-button(href="#join-modal") Join Room
  a.button.login-button(href="/boards/1234") Create Room

  div.modal#join-modal
    div.dialog
      h2 Enter Room Code
      input.shortcode(id="boardid", type="text", maxlength="4")
      h2 Enter Your Name
      input.shortcode(id="userid", type="text", maxlength="8")
      h2 Enter Password
      input.shortcode(type="text", maxlength="8")
      a.button.submit.invalid(href="#join-modal") Join

  script(src='/javascripts/index.js')
