extends layout

block content
  div#board
    div#boardId(data-value=boardId)
    div#userId(data-value=userId)

    nav
      input(type="button", class="save btn", id="save")
      input(type="button", id="pencil", class="pencil btn")
      input(type="text", class="picker", id="colorPicker")
      input(type="button", class="clear", id="clear" value="Clear")

    canvas#draw
  #chatcontainer
    #chat
    .controls
      input(type="button", id="send", class="clear" value="Send")
      input(type="text", id="data")

  script(src='https://cdnjs.cloudflare.com/ajax/libs/paper.js/0.9.22/paper-full.min.js')
  script(src='https://cdnjs.cloudflare.com/ajax/libs/spectrum/1.7.0/spectrum.min.js')
  script(src='https://cdnjs.cloudflare.com/ajax/libs/FileSaver.js/2014-11-29/FileSaver.min.js')
  script(src='/javascripts/lib/Blob.js')
  script(src='/javascripts/lib/canvas-toBlob.js')
  script(src='/socket.io/socket.io.js')

  script(src='/javascripts/chat.js')
  script(type='text/paperscript', src='/javascripts/draw.js', canvas='draw')
